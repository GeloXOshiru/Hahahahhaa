local Elerium = loadstring(game:HttpGet("https://raw.githubusercontent.com/AlexR32/Elerium/master/Library.lua"))()

local Window = Elerium:CreateWindow("Elerium UI")

local Tab = Window:AddTab("Main")

Tab:AddButton("Print Hello", function()
    print("Hello World!")
end)

Tab:AddToggle("Toggle Feature", function(state)
    print("Feature is now: " .. tostring(state))
end)

Tab:AddSlider("Speed", 16, 100, 16, function(value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
end)

Tab:AddDropdown("Select Option", {"Option 1", "Option 2", "Option 3"}, function(selected)
    print("Selected: " .. selected)
end)

Tab:AddTextbox("Welcome", "Type here...", function(text)
    print("User typed: " .. text)
end)

Tab:AddColorpicker("UI Color", Color3.fromRGB(255, 255, 255), function(color)
    print("Color changed to: " .. tostring(color))
end)

Tab:AddBind("Keybind", Enum.KeyCode.F, function()
    print("Keybind pressed!")
end)

Tab:AddLabel("This is a simple")
